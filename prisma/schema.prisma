generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userData{
  id              String         @id @default(uuid())
  chatId          Int
  first_name      String
  last_name       String
  language_code   String
  sex             Sex @default(UNDEFINED)
  dailySpending   dailySpending[]
  // cathegories     Cathegory[]
}

enum Sex {
  MAN
  WOMAN
  UNDEFINED
}

