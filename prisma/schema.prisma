generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userData {
  id            String          @id @default(uuid())
  first_name    String
  last_name     String
  language_code String
  sex           Sex             @default(UNDEFINED)
  chatId        BigInt
  monthlyBudget Int?
  dailySpending dailySpending[]
}

model dailySpending {
  id       String   @id @default(uuid())
  userId   String
  amount   Float
  date     DateTime @default(now())
  userData userData @relation(fields: [userId], references: [id])
}

enum Sex {
  MAN
  WOMAN
  UNDEFINED
}
